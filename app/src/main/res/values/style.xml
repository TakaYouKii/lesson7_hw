<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">26sp</item>
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="Gray.Button" parent="Base.Button">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">onOperationClick</item>
    </style>

    <style name="Orange.Button" parent="Base.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">onOperationClick</item>
    </style>

    <style name="Dark.Button" parent="Base.Button">
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">onNumberClick</item>
    </style>

    <style name="Policy.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">20dp</item>
        <item name="android:drawableEnd">@drawable/ic_right_arrow</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>